#include <stdio.h>
int main() {
    int num, remainder, reversed = 0;
    printf("Enter a positive integer: ");
    scanf("%d", &num);
    if (num <= 0) {
        printf("Please enter a positive integer.\n");
        return 1; 
    }
    while (num > 0) {
        remainder = num % 10;        
        reversed = reversed * 10 + remainder;  
        num /= 10;                   
    }
    printf("The reversed number is: %d\n", reversed);
    return 0;
}
