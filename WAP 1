int main() {
    int num, remainder;

    // Input the number from the user
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    // Check if the number is positive
    if (num <= 0) {
        printf("Please enter a positive integer.\n");
        return 1;
    }

    printf("The digits in reverse order are: ");

    while (num > 0) {
        remainder = num % 10;  
        printf("%d", remainder);  
        num /= 10;  
    }

    printf("\n");
    
    return 0;
}
