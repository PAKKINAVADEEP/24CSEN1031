#include <stdio.h>

#include <stdio.h>

int main() {
    int num, remainder, sum = 0;
    printf("Enter a positive integer: ");
    scanf("%d", &num);
    // Check if the number is positive
    if (num <= 0) {
        printf("Please enter a positive integer.\n");
        return 1; 
    }
    while (num > 0) {
        remainder = num % 10;  
        sum += remainder;      
        num /= 10;             
    }
    printf("The sum of the digits is: %d\n", sum);
    return 0;
}
